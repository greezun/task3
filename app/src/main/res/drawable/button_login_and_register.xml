<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"> <!-- pressed -->
        <shape android:shape="rectangle">
            <solid android:color="@null" />
            <corners android:radius="@dimen/cornerRadius" />
            <stroke android:color="@color/grayText2"
                android:width="2dp"/>
        </shape>
    </item>

    <item android:state_focused="true"><!-- focused -->
        <shape android:shape="rectangle">
            <solid android:color="@null" />
            <corners android:radius="@dimen/cornerRadius" />
            <stroke android:color="@color/grayText2"
                android:width="2dp"/>

        </shape>
    </item>

    <item android:state_hovered="true"><!-- hovered -->
        <shape android:shape="rectangle">
            <solid android:color="@null" />
            <corners android:radius="@dimen/cornerRadius" />
            <stroke android:color="@color/grayText2"
                android:width="2dp"/>

        </shape>

    </item>

    <item ><!-- default -->
        <shape android:shape="rectangle">
            <solid android:color="@null" />
            <corners android:radius="@dimen/cornerRadius" />
            <stroke android:color="@color/orange"
                android:width="2dp"/>

        </shape>
    </item>

</selector>

