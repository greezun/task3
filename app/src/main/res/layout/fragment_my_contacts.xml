<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.main.myContacts.MyContactsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.10"
        tools:ignore="MissingConstraints"
        android:background="?attr/colorTopAppPart">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvAddContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginMid"
            android:layout_marginBottom="@dimen/marginMid"
            android:clickable="true"
            android:focusable="true"
            android:text="@string/add_contact"
            android:textAppearance="@style/Text.PrimaryLight"
            android:textSize="@dimen/titleSmall"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="TouchTargetSizeCheck" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/marginMid"
        app:layout_constraintTop_toBottomOf="@id/head"
        app:layout_constraintBottom_toTopOf="@id/ivBasketMultiselect">

    </androidx.recyclerview.widget.RecyclerView>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivBasketMultiselect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/image_view_bastet_multyselect"
        android:visibility="gone"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginVertical="@dimen/marginMid"
        android:layout_marginEnd="@dimen/marginMid"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
