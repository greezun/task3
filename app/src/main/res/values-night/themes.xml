<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Task3" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lightGray</item>
        <item name="colorPrimaryVariant">@color/grayText_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black_dark</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/grayText_dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="colorOutline">?attr/colorPrimaryVariant</item>
        <item name="mainButtonColor">@color/yellow</item>
        <item name="secondaryButtonColor">@color/grayText</item>
        <item name="pressedButtonColor">@color/grayText2</item>
        <item name="colorOnSurface">?attr/colorOnPrimary</item>

        <item name="colorTopAppPart">@color/lightGray</item>
        <item name="colorBottomAppPart">@color/black_dark</item>

    </style>


</resources>